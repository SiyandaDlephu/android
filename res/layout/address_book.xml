<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtName" android:layout_x="16dp" android:layout_y="7dp" android:hint="First name"/>
    <EditText android:layout_width="match_parent" android:layout_height="46dp" android:inputType="textPersonName"
              android:ems="10" android:id="@+id/txtLastname" android:layout_x="13dp"
              android:layout_y="73dp" android:hint="Last name"/>
    <EditText
            android:layout_width="357dp"
            android:layout_height="46dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtEmail" android:layout_x="15dp" android:layout_y="202dp" android:hint="Email address"/>
    <EditText
            android:layout_width="354dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtPhoneNumber" android:layout_x="16dp" android:layout_y="133dp"
            android:hint="Cell phone number"/>
    <EditText
            android:layout_width="362dp"
            android:layout_height="48dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/txtAddress" android:layout_x="10dp" android:layout_y="275dp" android:hint="Home address"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/btnSave" android:layout_x="56dp" android:layout_y="385dp"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel"
            android:id="@+id/btnCancel" android:layout_x="226dp" android:layout_y="383dp"/>


</AbsoluteLayout>
</ScrollView>